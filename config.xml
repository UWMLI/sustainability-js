<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.wisc.wid.fielddaylab.sustainableu" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SustainableU</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <icon src="www/assets/icon.png" />
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="orientation" value="portrait" />
    <preference name="AllowInlineMediaPlayback" value="true"/>
    <preference name="MediaPlaybackRequiresUserAction" value="false"/>
    <preference name="BackupWebStorage" value="local"/>

    <platform name="ios">
      <!-- images are determined by width and height. The following are supported -->
      <splash src="www/assets/Default~iphone.png" width="320" height="480"/>
      <splash src="www/assets/Default@2x~iphone.png" width="640" height="960"/>
      <splash src="www/assets/Default-Portrait~ipad.png" width="768" height="1024"/>
      <splash src="www/assets/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
      <splash src="www/assets/Default-568h@2x~iphone.png" width="640" height="1136"/>
      <splash src="www/assets/Default-667h.png" width="750" height="1334"/>
      <splash src="www/assets/Default-736h.png" width="1242" height="2208"/>
    </platform>

</widget>
